{
  "$schema": "https://a2a.dev/schemas/agent-card-v1.json",
  "id": "spiffe://intent.solutions/agent/gwi/reviewer",
  "name": "GWI Reviewer Agent",
  "description": "Validation and quality control. Reviews resolutions for syntax, code loss, security issues. Escalates to humans when needed.",
  "version": "0.1.0",
  "capabilities": [
    "syntax-validation",
    "code-loss-detection",
    "security-scan",
    "quality-review",
    "escalation"
  ],
  "endpoints": {
    "a2a": "/a2a/reviewer",
    "health": "/health"
  },
  "models": {
    "default": "claude-sonnet-4-20250514"
  },
  "checks": [
    "syntax",
    "code-loss",
    "security",
    "logic"
  ],
  "inputs": {
    "resolution": "ResolutionResult from Resolver",
    "originalConflict": "ConflictInfo"
  },
  "outputs": {
    "approved": "boolean",
    "syntaxValid": "boolean",
    "codeLossDetected": "boolean",
    "securityIssues": "string[]",
    "suggestions": "string[]",
    "confidence": "0-100",
    "shouldEscalate": "boolean",
    "escalationReason": "string?"
  },
  "metadata": {
    "owner": "Intent Solutions",
    "contact": "jeremy@intentsolutions.io"
  }
}
