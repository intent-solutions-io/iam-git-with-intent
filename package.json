{
  "name": "git-with-intent",
  "version": "0.10.0",
  "private": true,
  "description": "AI-powered DevOps automation platform for PRs, merge conflicts, and issue-to-PR workflows",
  "keywords": [
    "ai",
    "devops",
    "git",
    "merge-conflicts",
    "agents",
    "automation"
  ],
  "author": "Intent Solutions <jeremy@intentsolutions.io>",
  "license": "BUSL-1.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:hooks:smoke": "npx tsx scripts/test-hooks-smoke.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "prepare": "husky",
    "claude:after-message": "npx tsx scripts/claude-after-message.ts",
    "smoke:staging": "npx tsx scripts/cloud-smoke-test.ts --env=staging",
    "smoke:production": "npx tsx scripts/cloud-smoke-test.ts --env=production",
    "deploy:staging": "./scripts/deploy-staging.sh",
    "arv": "npx tsx scripts/arv/run-all.ts",
    "arv:lint": "npx tsx scripts/arv/forbidden-patterns.ts",
    "arv:contracts": "npx vitest run test/contracts/ --reporter=verbose --coverage=false",
    "arv:goldens": "npx vitest run test/goldens/ --reporter=verbose --coverage=false",
    "arv:smoke": "npx tsx scripts/arv/smoke-test.ts",
    "generate:sdk-types": "npx tsx scripts/generate-sdk-types.ts",
    "validate:sdk-types": "npx tsx scripts/validate-sdk-types.ts",
    "tools:verify": "bash scripts/verify-tools.sh",
    "hooks:preflight": "bash scripts/hooks/preflight.sh",
    "hooks:postflight": "bash scripts/hooks/postflight.sh",
    "hooks:wrap": "bash scripts/hooks/run-with-hooks.sh",
    "budget:monitor": "npx tsx scripts/budget-monitor.ts"
  },
  "devDependencies": {
    "@apidevtools/openapi-schemas": "^2.1.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@libsql/client": "^0.15.15",
    "@tursodatabase/sync": "^0.3.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.5.0",
    "husky": "^9.0.0",
    "js-yaml": "^4.1.0",
    "openapi-typescript": "^7.10.1",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "firebase-admin": "^12.7.0",
    "vite": "7.3.1"
  },
  "overrides": {
    "fast-xml-parser": "^5.3.4",
    "undici": "^7.0.0"
  }
}
