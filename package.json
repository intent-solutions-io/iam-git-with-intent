{
  "name": "git-with-intent",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered DevOps automation platform for PRs, merge conflicts, and issue-to-PR workflows",
  "keywords": ["ai", "devops", "git", "merge-conflicts", "agents", "automation"],
  "author": "Intent Solutions <jeremy@intentsolutions.io>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "prepare": "husky",
    "claude:after-message": "npx ts-node --esm scripts/claude-after-message.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^9.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  }
}
